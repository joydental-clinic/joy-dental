---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ColumnsClient from "@/components/react/ColumnsClient";
import { safeFetch } from "@/utils/sanity";
import { postsQuery } from "@/utils/queries";

Astro.response.headers.set('Cache-Control', 'public, s-maxage=60');

const posts = await safeFetch<any[]>(postsQuery);
---

<BaseLayout title="칼럼" description="연세조이치과 전문의가 직접 쓰는 치과 칼럼 - 교정, 임플란트, 일반 치과 상식과 치료 사례">
  <ColumnsClient posts={posts || []} client:load />
</BaseLayout>
